{
	"description": "This arranges bookmarks.",
	"manifest_version": 2,
	"name": "BookmarkViewer",
	"version": "2.0.0",
	"homepage_url": "https://github.com/alprut/bkviewer",
	"icons": {
		"16": "icons/favicon.png",
		"32": "icons/icon.png",
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": "icons/icon.png"
	},

	"options_ui": {
		"page": "bkviewer_config.html",
		"open_in_tab": true
	},

	"permissions": [
		"bookmarks",
		"storage",
		"alarms",
		"tabs",
		"chrome://favicon/"
	]
}
